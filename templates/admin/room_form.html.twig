{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>{{ title }}</h1>
        {{ form_start(form, { 'attr': { 'class': 'form' } }) }}
            <div class="mb-3">
                {{ form_label(form.name) }}
                {{ form_widget(form.name, { 'attr': { 'class': 'form-control' } }) }}
                {{ form_errors(form.name) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.capacity) }}
                {{ form_widget(form.capacity, { 'attr': { 'class': 'form-control' } }) }}
                {{ form_errors(form.capacity) }}
            </div>
            <div class="mb-3">
            {{ form_label(form.equipment) }}
            {{ form_widget(form.equipment) }}
            {{ form_errors(form.equipment) }}
            </div>
            <button type="submit" class="btn btn-success">Save</button>
            <a href="{{ path('admin_rooms') }}" class="btn btn-secondary">Cancel</a>
        {{ form_end(form) }}
    </div>
{% endblock %}
