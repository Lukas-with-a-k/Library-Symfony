{% extends 'base.html.twig' %}

{% block title %}My Reservations{% endblock %}

{% block body %}
    <div class="container my-4">
        <h1 class="text-center">My Room Reservations</h1>

        {% if reservations is not empty %}
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Room Name</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Equipment</th>
                    </tr>
                </thead>
                <tbody>
                    {% for reservation in reservations %}
                        <tr>
                            <td>{{ reservation.room.name }}</td>
                            <td>{{ reservation.startDate|date('d/m/Y H:i') }}</td>
                            <td>{{ reservation.endDate|date('d/m/Y H:i') }}</td>
                            <td>{{ reservation.room.equipment|join(', ') }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p class="text-center">You have no room reservations.</p>
        {% endif %}
    </div>
{% endblock %}
