<script>
    document.addEventListener('DOMContentLoaded', function () {
        var flashModal = document.getElementById('flashModal');
        if (flashModal) {
            var modal = new bootstrap.Modal(flashModal);
            modal.show();
        }
    });
</script> 
        {% endblock %}
    </head>
    <body>
